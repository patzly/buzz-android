<resources>

  <style name="Widget.Buzz.Card" parent="Widget.MaterialComponents.CardView">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="cardBackgroundColor">@color/control</item>
    <item name="cardElevation">0dp</item>
    <item name="cardCornerRadius">12dp</item>
    <item name="strokeColor">@color/control_stroke</item>
    <item name="strokeWidth">1dp</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="rippleColor">@color/highlight</item>
  </style>

  <style name="Widget.Buzz.Snackbar" parent="Widget.MaterialComponents.Snackbar">
    <item name="actionTextColorAlpha">0.9</item>
    <item name="android:layout_margin">16dp</item>
  </style>

  <style
    name="Widget.Buzz.Button.TextButton.Snackbar"
    parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
    <item name="android:fontFamily">@font/jost_bold</item>
    <item name="cornerRadius">12dp</item>
    <item name="android:textColor">@color/retro_green_fg_invert</item>
  </style>

  <style name="Shape.Buzz.BottomSheet" parent="">
    <item name="android:background">@drawable/shape_bottom_sheet_background</item>
  </style>

  <style name="Theme.Buzz.Divider" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:layout_marginBottom">8dp</item>
    <item name="android:background">@color/stroke</item>
  </style>

  <style
    name="Widget.Buzz.Button.TextButton"
    parent="Widget.MaterialComponents.Button.TextButton">
    <item name="rippleColor">@color/highlight</item>
    <item name="android:textColor">@color/on_background_secondary</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">@font/jost_bold</item>
    <item name="cornerRadius">6dp</item>
  </style>

  <style
    name="Widget.Buzz.Button.OutlinedButton"
    parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="rippleColor">@color/secondary_translucent</item>
    <item name="iconTint">@color/icon</item>
    <item name="android:textColor">@color/secondary</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">@font/jost_bold</item>
    <item name="strokeColor">@color/stroke</item>
    <item name="strokeWidth">1dp</item>
    <item name="cornerRadius">12dp</item>
  </style>

  <style
    name="Widget.Buzz.Button.UnelevatedButton"
    parent="Widget.MaterialComponents.Button.UnelevatedButton">
    <item name="rippleColor">@color/highlight_on_secondary</item>
    <item name="android:textColor">@color/on_secondary</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">@font/jost_bold</item>
    <item name="backgroundTint">@color/retro_green_bg_white</item>
    <item name="cornerRadius">12dp</item>
  </style>

  <style
    name="Widget.Buzz.LinearProgressIndicator"
    parent="@style/Widget.MaterialComponents.LinearProgressIndicator">
    <item name="android:layout_height">wrap_content</item>
    <item name="trackColor">@color/on_background_tertiary</item>
    <item name="trackThickness">8dp</item>
    <item name="trackCornerRadius">4dp</item>
    <item name="indicatorColor">@color/secondary</item>
  </style>

  <style
    name="TextAppearance.Buzz.BottomSheet.Title"
    parent="TextAppearance.MaterialComponents.Body2">
    <item name="android:textColor">@color/on_background</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textAlignment">viewStart</item>
  </style>

</resources>