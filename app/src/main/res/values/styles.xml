<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="Widget.Buzz.Snackbar" parent="Widget.MaterialComponents.Snackbar">
    <item name="actionTextColorAlpha">0.9</item>
    <item name="android:layout_margin">16dp</item>
  </style>

  <style
    name="Widget.Buzz.Button.TextButton.Snackbar"
    parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
    <item name="android:fontFamily">@font/jost_bold</item>
    <item name="cornerRadius">12dp</item>
    <item name="android:textColor">@color/retro_green_fg_invert</item>
    <item name="android:textSize">@dimen/font_size_game</item>
  </style>

  <style name="Widget.Buzz.Card.Control" parent="Widget.MaterialComponents.CardView">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="cardBackgroundColor">@color/control</item>
    <item name="cardElevation">0dp</item>
    <item name="cardCornerRadius">12dp</item>
    <item name="strokeColor">@color/control_stroke</item>
    <item name="strokeWidth">1dp</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="rippleColor">@color/highlight</item>
  </style>

  <style name="Widget.Buzz.Divider" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:layout_marginBottom">8dp</item>
    <item name="android:background">@color/stroke</item>
  </style>

  <style
    name="Widget.Buzz.Button.TextButton"
    parent="Widget.MaterialComponents.Button.TextButton">
    <item name="rippleColor">@color/highlight</item>
    <item name="android:textColor">@color/on_background_secondary</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">@font/jost_bold</item>
    <item name="cornerRadius">12dp</item>
    <item name="android:textSize">14.5sp</item>
  </style>

  <style
    name="Widget.Buzz.Button.OutlinedButton"
    parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="rippleColor">@color/secondary_translucent</item>
    <item name="iconTint">@color/icon</item>
    <item name="android:textColor">@color/secondary</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">@font/jost_bold</item>
    <item name="strokeColor">@color/stroke</item>
    <item name="strokeWidth">1dp</item>
    <item name="cornerRadius">12dp</item>
    <item name="android:textSize">14.5sp</item>
  </style>

  <style
    name="Widget.Buzz.Button.UnelevatedButton"
    parent="Widget.MaterialComponents.Button.UnelevatedButton">
    <item name="rippleColor">@color/highlight_on_secondary</item>
    <item name="android:textColor">@color/on_secondary</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">@font/jost_bold</item>
    <item name="backgroundTint">@color/retro_green_bg_white</item>
    <item name="cornerRadius">12dp</item>
    <item name="android:textSize">14.5sp</item>
  </style>

  <style
    name="Widget.Buzz.Button.UnelevatedButton.Game"
    parent="Widget.Buzz.Button.UnelevatedButton">
    <item name="android:textSize">@dimen/font_size_game</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="Widget.Buzz.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">16dp</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:minHeight">0dp</item>
  </style>

  <style
    name="Widget.Buzz.LinearProgressIndicator"
    parent="@style/Widget.MaterialComponents.LinearProgressIndicator">
    <item name="android:layout_height">wrap_content</item>
    <item name="trackColor">@color/on_background_tertiary</item>
    <item name="trackThickness">8dp</item>
    <item name="trackCornerRadius">4dp</item>
    <item name="indicatorColor">@color/secondary</item>
  </style>

  <!-- LIST -->

  <style name="Widget.Buzz.LinearLayout.ListItem" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style
    name="Widget.Buzz.LinearLayout.ListItem.Clickable"
    parent="Widget.Buzz.LinearLayout.ListItem">
    <item name="android:clickable">true</item>
    <item name="android:background">@drawable/ripple_bg_list_item</item>
  </style>

  <style
    name="Widget.Buzz.LinearLayout.ListItem.SingleLine"
    parent="Widget.Buzz.LinearLayout.ListItem">
    <item name="android:minHeight">48dp</item>
  </style>

  <style
    name="Widget.Buzz.LinearLayout.ListItem.SingleLine.Icon"
    parent="Widget.Buzz.LinearLayout.ListItem.SingleLine">
    <item name="android:minHeight">56dp</item>
  </style>

  <style
    name="Widget.Buzz.LinearLayout.ListItem.SingleLine.Clickable"
    parent="Widget.Buzz.LinearLayout.ListItem.SingleLine">
    <item name="android:clickable">true</item>
    <item name="android:background">@drawable/ripple_bg_list_item</item>
  </style>

  <style
    name="Widget.Buzz.LinearLayout.ListItem.SingleLine.Icon.Clickable"
    parent="Widget.Buzz.LinearLayout.ListItem.SingleLine.Icon">
    <item name="android:clickable">true</item>
    <item name="android:background">@drawable/ripple_bg_list_item</item>
  </style>

  <style
    name="Widget.Buzz.LinearLayout.ListItem.TwoLine"
    parent="Widget.Buzz.LinearLayout.ListItem">
    <item name="android:minHeight">64dp</item>
  </style>

  <style
    name="Widget.Buzz.LinearLayout.ListItem.TwoLine.Icon"
    parent="Widget.Buzz.LinearLayout.ListItem.TwoLine">
    <item name="android:minHeight">72dp</item>
  </style>

  <style
    name="Widget.Buzz.LinearLayout.ListItem.TwoLine.Clickable"
    parent="Widget.Buzz.LinearLayout.ListItem.TwoLine">
    <item name="android:clickable">true</item>
    <item name="android:background">@drawable/ripple_bg_list_item</item>
  </style>

  <style
    name="Widget.Buzz.LinearLayout.ListItem.TwoLine.Icon.Clickable"
    parent="Widget.Buzz.LinearLayout.ListItem.TwoLine.Icon">
    <item name="android:clickable">true</item>
    <item name="android:background">@drawable/ripple_bg_list_item</item>
  </style>

  <style name="Widget.Buzz.LinearLayout.ListItem.TextBox" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style
    name="Widget.Buzz.LinearLayout.ListItem.TextBox.Stretch"
    parent="Widget.Buzz.LinearLayout.ListItem.TextBox">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
  </style>

  <style name="Widget.Buzz.ImageView.ListItem.Icon" parent="">
    <item name="android:layout_width">24dp</item>
    <item name="android:layout_height">24dp</item>
    <item name="android:layout_gravity">start|center_vertical</item>
    <item name="android:layout_marginEnd">32dp</item>
    <item name="android:importantForAccessibility">no</item>
  </style>

  <!-- TEXT -->

  <style name="Widget.Buzz.TextView" parent="Widget.MaterialComponents.TextView">
    <item name="android:textSize">15.5sp</item>
    <item name="android:lineSpacingExtra">-1.5sp</item>
    <item name="android:textColor">@color/on_background</item>
    <item name="android:textAlignment">viewStart</item>
    <item name="android:fontFamily">@font/jost_book</item>
  </style>

  <style name="Widget.Buzz.TextView.Paragraph" parent="Widget.Buzz.TextView">
    <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
    <item name="android:breakStrategy" tools:targetApi="m">high_quality</item>
    <item name="android:hyphenationFrequency" tools:targetApi="m">full</item>
  </style>

  <style name="Widget.Buzz.TextView.Toolbar" parent="Widget.Buzz.TextView">
    <item name="android:textColor">@color/on_background</item>
    <item name="android:textSize" tools:ignore="SpUsage">21.5dp</item>
    <item name="android:fontFamily">@font/jost_bold</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="Widget.Buzz.TextView.Category" parent="Widget.Buzz.TextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">72dp</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">3dp</item>
    <item name="android:fontFamily">@font/jost_bold</item>
    <item name="android:textSize">14.5sp</item>
    <item name="android:textColor">@color/secondary</item>
  </style>

  <style name="Widget.Buzz.TextView.Hex" parent="Widget.Buzz.TextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/font_size_letters</item>
    <item name="android:fontFamily">@font/jost_bold</item>
    <item name="android:singleLine">true</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:layout_gravity">center</item>
  </style>

  <style name="Widget.Buzz.TextView.Snackbar" parent="Widget.MaterialComponents.Snackbar.TextView">
    <item name="android:textSize">@dimen/font_size_game</item>
  </style>

  <style name="Widget.Buzz.TextView.ListItem.OverLine" parent="Widget.Buzz.TextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:maxLines">2</item>
    <item name="android:textSize">12sp</item>
    <item name="android:letterSpacing">0.1</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/on_background_secondary</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="Widget.Buzz.TextView.ListItem.Title" parent="Widget.Buzz.TextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">16.5sp</item>
  </style>

  <style name="Widget.Buzz.TextView.ListItem.Description" parent="Widget.Buzz.TextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/on_background_secondary</item>
  </style>

  <style name="Widget.Buzz.TextView.Title.BottomSheet" parent="Widget.Buzz.TextView">
    <item name="android:textSize">19sp</item>
    <item name="android:fontFamily">@font/jost_bold</item>
    <item name="singleLine">true</item>
  </style>

</resources>