<resources>

  <style name="Base.Spelling" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary</item>
    <item name="colorOnPrimary">@color/on_primary</item>

    <item name="colorSecondary">@color/secondary</item>
    <item name="colorOnSecondary">@color/on_secondary</item>

    <item name="android:colorBackground">@color/background</item>
    <item name="colorOnBackground">@color/on_background</item>
    <item name="android:colorForeground">@color/on_background</item>

    <item name="colorSurface">@color/surface</item>
    <item name="colorOnSurface">@color/on_surface</item>
    <item name="snackbarButtonStyle">@style/Widget.Spelling.Button.TextButton.Snackbar</item>

    <item name="android:colorControlNormal">@color/on_background</item>
    <item name="android:colorControlActivated">@color/secondary</item>
    <item name="android:colorControlHighlight">@color/highlight</item>
    <item name="android:colorEdgeEffect">@color/highlight</item>

    <item name="android:fontFamily">@font/jost_book</item>
  </style>

  <style name="Theme.Spelling" parent="Base.Spelling">
    <item name="android:statusBarColor">@color/status_bar_lollipop</item>
    <item name="android:navigationBarColor">@color/black</item>
  </style>

  <style name="Base.Spelling.BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary</item>
    <item name="colorOnPrimary">@color/on_primary</item>

    <item name="colorSecondary">@color/secondary</item>
    <item name="colorOnSecondary">@color/on_secondary</item>

    <item name="android:colorBackground">@color/background</item>
    <item name="colorOnBackground">@color/on_background</item>
    <item name="android:colorForeground">@color/on_background</item>

    <item name="colorSurface">@color/surface</item>
    <item name="colorOnSurface">@color/on_surface</item>

    <item name="android:colorControlNormal">@color/on_background</item>
    <item name="android:colorControlActivated">@color/secondary</item>
    <item name="android:colorControlHighlight">@color/highlight</item>
    <item name="android:colorEdgeEffect">@color/highlight</item>

    <item name="android:fontFamily">@font/jost_book</item>

    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowIsFloating">false</item>

    <item name="bottomSheetStyle">@style/Shape.Spelling.BottomSheet</item>
  </style>

  <style name="Theme.Spelling.BottomSheetDialog" parent="Base.Spelling.BottomSheetDialog">
    <item name="android:navigationBarColor">@color/black</item>
  </style>

</resources>